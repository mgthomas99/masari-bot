# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**/*.{cfg,conf,ini}]
indent_size = 2
indent_style = space

# For Python files, it's important to not trim whitespace, as Python uses
# whitespace to determine an expression's scope.
[**/*.py]
trim_trailing_whitespace = false
